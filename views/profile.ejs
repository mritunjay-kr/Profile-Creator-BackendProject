<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Logout</a>
        </div>
        <div class="flex items-center gap-3">
            <!-- Profile image -->
            <div class="relative w-16 h-16 cursor-pointer" id="profilePicContainer">
                <img class="w-full h-full object-cover rounded-full"
                    src="/images/uploads/<%= user.profilepic || 'profile.jpg' %>" alt="">
            </div>

            <!-- Profile popup -->
            <div id="profilePopup"
                class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
                <div class="bg-white p-6 rounded-lg w-80 text-center">
                    <img src="/images/uploads/<%= user.profilepic || 'profile.jpg' %>"
                        class="w-32 h-32 rounded-full mx-auto mb-4" alt="">

                    <% if (isOwner) { %>
                        <div class="flex gap-4 justify-center">
                            <a href="/profile/change" class="bg-blue-500 px-4 py-2 rounded text-white">Change</a>
                            <a href="/profile/remove" class="bg-red-500 px-4 py-2 rounded text-white">Remove</a>
                        </div>
                        <% } %>

                            <button id="closePopup" class="mt-4 px-4 py-2 bg-gray-500 text-white rounded">Close</button>
                </div>
            </div>

            <h3 class="text-3xl"><span class="font-light">Hello</span>, <%= user.name %>ðŸ˜‰</h3>
        </div>
        <h5 class="mb-5 mt-3">You can create a post.</h5>
        <form action="/post" method="post">
            <textarea placeholder="What's on your mind?"
                class="block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
                name="content" id=""></textarea>
            <input class="px-3 w-40 py-2 bg-blue-500 block rounded-md mt-2" type="submit" value="Create Post">
        </form>

        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your posts.</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-4 mb-4 rounded-md bg-zinc-800 border-[1px] border-zinc-800">
                        <h4 class="text-blue-500 mb-2">@<%= user.username %>
                        </h4>
                        <p class="text-xs text-zinc-500">
                            Posted on <%= post.date.toDateString() %>
                        </p>
                        <p class="text-sm tracking-tight">
                            <%= post.content %>
                        </p>
                        <small class="mt-2 inline-block">
                            <%= post.likes.length %> likes
                        </small>
                        <div class="btns flex gap-4 mt-1">
                            <a class="text-blue-500 like-btn inline-block w-14" data-id="<%= post._id %>" href="#">
                                <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                            </a>

                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                            <a class="text-red-500 delete-btn ml-auto" data-id="<%= post._id %>" href="#">
                                Delete
                            </a>
                        </div>

                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">

        <div class="bg-zinc-800 p-6 rounded-lg w-80 text-center">
            <h3 class="text-lg font-semibold mb-4 text-white">Delete Post?</h3>
            <p class="text-sm text-zinc-400 mb-6">
                Are you sure you want to delete this post? This action cannot be undone.
            </p>
            <div class="flex justify-center gap-4">
                <button id="cancelDelete" class="px-4 py-2 bg-zinc-600 rounded">Cancel</button>
                <a id="confirmDelete" href="#" class="px-4 py-2 bg-red-500 rounded">Delete</a>
            </div>
        </div>
    </div>

    <script>
        // Like functionality
        document.querySelectorAll(".like-btn").forEach(btn => {
            btn.addEventListener("click", async (e) => {
                e.preventDefault();

                let postId = btn.getAttribute("data-id");
                let res = await fetch(`/like/${postId}`, { method: "POST" });
                let data = await res.json();

                btn.textContent = data.liked ? "Unlike" : "Like";
                btn.parentElement.previousElementSibling.textContent = `${data.likes} likes`;
            });
        });

        // Delete functionality
        const deleteModal = document.getElementById("deleteModal");
        const confirmDelete = document.getElementById("confirmDelete");
        const cancelDelete = document.getElementById("cancelDelete");

        document.querySelectorAll(".delete-btn").forEach(btn => {
            btn.addEventListener("click", (e) => {
                e.preventDefault();
                let postId = btn.getAttribute("data-id");
                confirmDelete.href = `/delete/${postId}`;
                deleteModal.classList.remove("hidden"); // Show modal
            });
        });

        cancelDelete.addEventListener("click", () => {
            deleteModal.classList.add("hidden"); // Hide modal
        });


        //profile change ke liye
        const profilePic = document.getElementById("profilePicContainer");
        const popup = document.getElementById("profilePopup");
        const closePopup = document.getElementById("closePopup");

        profilePic.addEventListener("click", () => {
            const currentPic = "<%= user.profilepic %>";
            if (currentPic === "profile.jpg") {
                // Default pic hone par direct change page open
                window.location.href = "/profile/change";
            } else {
                // Custom pic hone par popup show
                popup.classList.remove("hidden");
            }
        });

        closePopup.addEventListener("click", () => {
            popup.classList.add("hidden");
        });
    </script>

</body>

</html>